					<option value="2">Musculação</option>
					<option value="3">Alongamento</option>
				</select>
			</div>
		</div>
		<div class="col-md-3">
			<div class="mb-3">
				<label class="form-label" for="imagem">Imagem</label>
				<select id="imagem" class="input-custom">
					<option value="1">Abdominal</option>
					<option value="2">Braço</option>
				</select>
			</div>
		</div>
	</div>

	<div class="mb-3">
		<label class="form-label" for="descricao_completa">Descrição Completa</label>
		<div id="descricao_completa"></div>
	</div>

	<div class="mb-3">
		<button type="button" class="botao-cadastro-login d-block">Criar Treino</button>
	</div>

